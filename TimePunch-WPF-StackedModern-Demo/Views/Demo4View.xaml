<Page x:Class="TimePunch_WinUI_StackedUI_Demo.Views.Demo4View"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:extensions="clr-namespace:TimePunch.StackedUI.Extensions;assembly=TpStackedUI"
      xmlns:controls="clr-namespace:TimePunch.StackedUI.Controls;assembly=TpStackedUI"
      mc:Ignorable="d" 
      DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=Demo4ViewModel}"
      extensions:StackedFrameExtension.FrameKey="Demo4View"
      Title="Sub Page"
      d:DesignHeight="450" d:DesignWidth="800" MinWidth="600">

    <controls:PageControl >
        <controls:PageControl.Content>
            <Grid Background="Cyan">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Button Content="Next" 
                        Grid.Row="0" 
                        Grid.Column="1" 
                        Margin="12"
                        Command="{Binding NextCommand}"
                        Width="100"></Button>
                <Button Content="Last" 
                        Grid.Row="1" 
                        Grid.Column="1" 
                        Margin="12"
                        Command="{Binding LastCommand}"></Button>
            </Grid>
        </controls:PageControl.Content>
    </controls:PageControl>
</Page>