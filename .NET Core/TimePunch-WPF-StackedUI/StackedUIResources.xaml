<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TimePunch.StackedUI.Controls">

    <Style TargetType="local:PageControl">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlPageTextBaseHighBrush}" />
        <Setter Property="FontFamily" Value="{DynamicResource ContentControlThemeFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource ControlContentThemeFontSize}" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Stretch" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:PageControl">
                    <Border
                        Margin="6 0 6 20"
                        BorderBrush="{DynamicResource SystemControlBackgroundListLowBrush}"
                        BorderThickness="1"
                        Background="{DynamicResource SystemControlBackgroundAltHighBrush}">

                        <!-- Example Display -->
                        <ContentPresenter
                            x:Name="ControlPresenter"
                            Margin="0"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            Content="{TemplateBinding Content}"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:GroupControl">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource SystemControlPageTextBaseHighBrush}" />
        <Setter Property="FontFamily" Value="{DynamicResource ContentControlThemeFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource ControlContentThemeFontSize}" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Margin" Value="{DynamicResource WinHorizontalMargin}"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate
          TargetType="local:GroupControl">
                    <Grid SnapsToDevicePixels="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MaxWidth="{TemplateBinding MaxContentWidth}" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label
              Grid.Column="0"
              Style="{DynamicResource WinSubHeaderText}"
              Margin="{DynamicResource WinVerticalMargin}"
              Content="{TemplateBinding HeaderText}" />

                        <Border
              Grid.Row="1"
              Grid.Column="0"
              BorderBrush="{DynamicResource SystemControlBackgroundListLowBrush}"
              BorderThickness="1"
              Background="{DynamicResource SystemControlBackgroundAltHighBrush}">
                            <Grid x:Name="ExampleContainer">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition x:Name="OptionsColumn" Width="Auto" MaxWidth="320" MinWidth="200" />
                                </Grid.ColumnDefinitions>

                                <!-- Example Display -->
                                <ContentPresenter
                  x:Name="ControlPresenter"
                  Margin="12"
                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                  Content="{TemplateBinding Example}"
                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />

                                <!-- Options Display -->
                                <Border
                  x:Name="OptionsRoot"
                  Grid.Column="1"
                  Margin="0,12,12,12"
                  Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
                                    <ContentPresenter
                    x:Name="OptionsPresenter"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="16"
                    Content="{TemplateBinding Options}"
                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Options" Value="{x:Null}">
                            <Setter TargetName="OptionsRoot" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="OptionsColumn" Property="MinWidth" Value="0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:ContentSizer}">
        <!-- Standardwerte: schmale Leiste + Hand-Cursor -->
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Focusable" Value="True" />
        <Setter Property="Cursor" Value="SizeWE" />
        <Setter Property="MinWidth" Value="4" />
        <Setter Property="MinHeight" Value="4" />
        <!-- Standard: vertikale Leiste -->
        <Setter Property="Width" Value="6" />
        <Setter Property="Height" Value="Auto" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ContentSizer}">
                    <Border Background="{TemplateBinding Background}">
                        <Grid>
                            <!-- Gripper in der Mitte -->
                            <Grid HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="0">
                                <StackPanel x:Name="GripStack"
                                            Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <Rectangle Width="3" Height="50" Margin="0,1" RadiusX="1" RadiusY="1" Fill="#88000000" />
                                </StackPanel>
                            </Grid>

                            <!-- Thumb fängt die Drag-Events ab -->
                            <Thumb x:Name="PART_Thumb"
                                   Background="Transparent"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />
                        </Grid>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>